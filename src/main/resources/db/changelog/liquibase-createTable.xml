<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1688896465593-1" author="STimur">
        <comment>Create table 'Site'</comment>
        <createTable tableName="site">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_site"/>
            </column>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="status_time" type="DATETIME" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="last_error" type="VARCHAR(255)"/>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1689253618718-1" author="STimur">
        <createTable tableName="page">
            <column name="site_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_page"/>
            </column>
            <column name="path" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_page"/>
            </column>
            <column name="code" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="mediumtext"/>
        </createTable>
    </changeSet>
    <changeSet id="1248896465593-1" author="STimur">
        <comment>Create foreign key for table 'Page'</comment>
        <addForeignKeyConstraint baseTableName="page" baseColumnNames="site_id" referencedTableName="site"
                                 referencedColumnNames="id" constraintName="fk_p_site_id" onUpdate="CASCADE"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="1688898420408-1" author="STimur">
        <comment>insert data in table 'Site'</comment>
        <sqlFile path="db/changelog/script/09-07-23.sql"/>
    </changeSet>
</databaseChangeLog>